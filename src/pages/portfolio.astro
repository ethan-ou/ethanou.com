---
import Main from '../layouts/main.astro';

import PortfolioPreview from '../components/PortfolioPreview.astro';

const projects = (await Astro.glob('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<Main title="Portfolio" description="Ethan's Portfolio">
	<div class="wrapper">
		<h1 class="title mt4 mb4">Portfolio</h1>
		<div class="grid">
			{projects.map((project) => <PortfolioPreview project={project} />)}
		</div>
	</div>
</Main>
		