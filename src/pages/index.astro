---
import PortfolioGrid from '../components/PortfolioGrid.jsx';
import Main from '../layouts/main.astro';

const portfolio = (await Astro.glob('./portfolio/**/*.md')).map((item) => {
	return { ...item.frontmatter, href: item.url }
}).reverse()
