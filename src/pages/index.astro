---
import Button from '../components/Button.astro';

import PortfolioPreview from '../components/PortfolioPreview.astro';
import Main from '../layouts/main.astro';

const projects = await Astro.glob('./project/**/*.md');
const featuredProject = projects[0];
---

<Main title="Home" description="Home of Ethan Ou">
	<div class="flex items-center main-container h-screen-60">
		<div class="max-w-xl">
			<h1 class="text-4xl font-bold">Hey, I’m Ethan - Media and Technology from Sydney.</h1>
			<p class="pt-6 text-lg">Currently working in Education.</p>
		</div>
	</div>
	<div class="main-container">
		<h2 class="text-3xl font-bold">Portfolio</h2>
		<div class="grid">
